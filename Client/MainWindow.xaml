<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="300" Width="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="347*"/>
            <ColumnDefinition Width="203*"/>
        </Grid.ColumnDefinitions>
        
        <Label Margin="50,100,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="125"  Name="lblUsernmae" Content="Enter Username:" Grid.ColumnSpan="3" Height="26"/>
        <TextBox Name="txtUsername" Margin="0,100,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="200" Grid.Column="3" Height="18" />
        <Label Name="lblPassword" Content="Enter Password" Margin="50,180,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="125" Grid.ColumnSpan="3" Height="26" />
        <PasswordBox Name="pwdPassword" Margin="0,180,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="200" Grid.Column="3" Height="18" />
        <Button Name="btnLogin" Content="Login" Margin="295,231,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="100" Click="btnLogin_Click" />
    </Grid>
</Window>
